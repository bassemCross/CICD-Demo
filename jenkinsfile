pipeline { 
    agent any  
    stages { 
        stage('Build') { 
            steps { 
                script {
                    echo 'Maven clean install stage'
                    if (isUnix()) {
                        sh 'mvn clean install'
                    }else{
                        bat 'mvn clean install'
                    }
                }
            }
        }
        stage('Image') { 
            steps { 
                script {
                    echo 'Create Image.'
                    dir("target/sonicesb/sdm") {
                        if (isUnix()) {
                            sh 'docker build -t sdm .'
                        }else{
                            bat 'docker build -t sdm .'
                        }
                    }
                }
            }
        }
    }
}