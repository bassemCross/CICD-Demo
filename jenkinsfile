pipeline { 
    agent any  
    stages { 
        stage('Build') { 
            steps { 
                script {
                    echo 'Build.'
                    if (isUnix()) {
                        sh 'mvn -B -DskipTests clean package'
                    }else{
                        powershell 'mvn -B -DskipTests clean package'
                    }
                }
            }
        }
        stage('Image') { 
            steps { 
               echo 'Image.'
                script {
                    echo 'Build.'
                    if (isUnix()) {
                        sh 'docker build docker build -t NewImage .'
                    }else{
                        powershell 'docker build docker build -t NewImage .'
                    }
                }
            }
        }
    }
}